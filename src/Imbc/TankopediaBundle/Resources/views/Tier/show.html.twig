{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tier</h1>

    <table class="table table-condensed table-hover table-striped record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tier.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ tier.name }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('tankopedia_tier') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('tankopedia_tier_edit', { 'slug': tier.slug }) }}">
            Edit
        </a>
    </li>
</ul>
{% endblock %}
