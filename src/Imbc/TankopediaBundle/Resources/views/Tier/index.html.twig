{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tier list</h1>

    <table class="table table-condensed table-hover table-striped records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Number of Tanks</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tankopedia_tier_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.value }}</td>
                <td>{{ entity.tanks | length }}</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-mini">
                            <a href="{{ path('tankopedia_tier_show', { 'id': entity.id }) }}">show</a>
                        </button>
                        <button class="btn btn-mini">
                            <a href="{{ path('tankopedia_tier_edit', { 'id': entity.id }) }}">edit</a>
                        </button>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tankopedia_tier_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
