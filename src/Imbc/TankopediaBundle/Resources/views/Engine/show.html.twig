{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Engine</h1>

    <table class="table table-condensed table-hover table-striped record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Xp</th>
                <td>{{ entity.xp }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ entity.cost }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ entity.weight }}</td>
            </tr>
            <tr>
                <th>Power</th>
                <td>{{ entity.power }}</td>
            </tr>
            <tr>
                <th>Firechance</th>
                <td>{{ entity.fireChance }}</td>
            </tr>
            <tr>
                <th>Fueltype</th>
                <td>{{ entity.fuelType }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('tankopedia_engine') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('tankopedia_engine_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('tankopedia_engine_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
