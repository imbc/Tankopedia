{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Engine list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Xp</th>
                <th>Cost</th>
                <th>Weight</th>
                <th>Power</th>
                <th>Firechance</th>
                <th>Fueltype</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tankopedia_engine_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.xp }}</td>
                <td>{{ entity.cost }}</td>
                <td>{{ entity.weight }}</td>
                <td>{{ entity.power }}</td>
                <td>{{ entity.fireChance }}</td>
                <td>{{ entity.fuelType }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tankopedia_engine_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tankopedia_engine_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tankopedia_engine_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
