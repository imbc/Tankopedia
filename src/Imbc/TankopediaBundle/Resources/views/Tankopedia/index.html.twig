{% extends 'ImbcTankopediaBundle::_layout.html.twig' %}

{% block body -%}

<div class="panel">
    <div class="frame">
        <div class="header">Tanks</div>
        <div class="content">
            <label for="tank_id">name</label>
            <input type="text" id="tank_id" class="autocomplete">
        </div>
    </div>
</div>

<div class="panel">
    <div class="frame">
        <div class="header">Nation</div>
        <div class="content">
        {% for nationality in nationalities %}
        <ul class="block-list">
            <li>
                <div class="block-list-item">
                    <div>{{ nationality.abreviation }}</div>
                    <div>
                        <a href="{{ path( 'tankopedia_nationality_show', { 'slug': nationality.slug }) }}">
                            {{ nationality.name }}
                        </a>
                    </div>
                </div>
            </li>
        </ul>
        {% endfor %}
        </div>
    </div>
</div>

<div class="panel">
    <div class="frame">
        <div class="header">Class</div>
        <div class="content">
        {% for class in classes %}
        <ul class="block-list">
            <li>
                <div class="block-list-item">
                    <div>
                        <a href="{{ path( 'tankopedia_class_show', { 'slug': class.slug }) }}">
                            {{ class.name }}
                        </a>
                    </div>
                </div>
            </li>
        </ul>
        {% endfor %}
        </div>
    </div>
</div>

<div class="panel">
    <div class="frame">
        <div class="header">Tier</div>
        <div class="content">
        {% for tier in tiers %}
        <ul class="block-list">
            <li>
                <div class="block-list-item">
                    <div>
                        <a href="{{ path( 'tankopedia_tier_show', { 'slug': tier.slug }) }}">
                            {{ tier.name }}
                        </a>
                    </div>
                </div>
            </li>
        </ul>
        {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
    $( document ).ready( function()
    {
        $( 'input.autocomplete' ).autocomplete(
        {
            source: "{{ path( 'tankopedia_autocomplete_tanks' ) }}",
            minLength: 2,
        });
    });
    </script>
{% endblock %}
