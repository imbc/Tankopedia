{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Track</h1>

    <table class="table table-condensed table-hover table-striped record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ track.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ track.name }}</td>
            </tr>
            <tr>
                <th>Xp</th>
                <td>{{ track.xp }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ track.cost }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ track.weight }}</td>
            </tr>
            <tr>
                <th>Loadlimit</th>
                <td>{{ track.loadLimit }}</td>
            </tr>
            <tr>
                <th>Traversespeed</th>
                <td>{{ track.traverseSpeed }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('tankopedia_track') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('tankopedia_track_edit', { 'slug': track.slug }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('tankopedia_track_delete', { 'slug': track.slug }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
