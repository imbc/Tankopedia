{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Track list</h1>

    <table class="table table-condensed table-hover table-striped records_list">
        <thead>
            <tr>
                <th>Tier</th>
                <th>Name</th>
                <th>Xp</th>
                <th>Cost</th>
                <th>Weight</th>
                <th>Loadlimit</th>
                <th>Traversespeed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for track in tracks %}
            <tr>
                <td>{{ track.tier }}</td>
                <td>{{ track.name }}</td>
                <td>{{ track.xp }}</td>
                <td>{{ track.cost }}</td>
                <td>{{ track.weight }}</td>
                <td>{{ track.loadLimit }}</td>
                <td>{{ track.traverseSpeed }}</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-mini">
                            <a href="{{ path('tankopedia_track_show', { 'slug': track.slug }) }}">show</a>
                        </button>
                        <button class="btn btn-mini">
                            <a href="{{ path('tankopedia_track_edit', { 'slug': track.slug }) }}">edit</a>
                        </button>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tankopedia_track_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
