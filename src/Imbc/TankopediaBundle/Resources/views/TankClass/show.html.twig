{% extends '::base.html.twig' %}

{% block body -%}
<h1>{{ class.name }}</h1>

<div class="panel">
    <div class="frame">
        <div class="header">American</div>
        <div class="content">
        {% for tank in tanks %}
        <ul class="block-list">
            {% if tank.nationality.abreviation == 'USA' %}
                <li>
                    <div class="block-list-item">
                        <div>{{ tank.tier }}</div>
                        <div>
                            <a href="{{ path( 'tankopedia_tank_show', { 'slug': tank.slug }) }}">
                                {{ tank.name }}
                            </a>
                        </div>
                    </div>
                </li>
            {% endif %}
        </ul>
        {% endfor %}
        </div>
    </div>
</div>

