{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Type</h1>

    <table class="table table-condensed table-hover table-striped record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ class.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ class.name }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('tankopedia_class') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('tankopedia_class_edit', { 'id': class.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('tankopedia_class_delete', { 'id': class.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
