{% extends '::base.html.twig' %}

{% block body -%}
<h1>Class list</h1>

<table class="table table-condensed table-hover table-striped records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Number of Tanks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for class in classes %}
        <tr>
            <td>{{ class.name }}</td>
            <td>{{ class.tanks | length }}</td>
            <td>
                <div class="btn-group">
                    <button class="btn btn-mini">
                        <a href="{{ path('tankopedia_class_show', { 'slug': class.slug }) }}">show</a>
                    </button>
                    <button class="btn btn-mini">
                        <a href="{{ path('tankopedia_class_edit', { 'slug': class.slug }) }}">edit</a>
                    </button>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a class="btn" href="{{ path('tankopedia_class_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
